# ===============================
# CONFIGURATION DE L'APPLICATION
# ===============================

# Limite de taille des fichiers vidéo (100MB en octets)
MAX_FILE_SIZE=104857600

# Mode d'environnement (development, production, test)
NODE_ENV=development

# ===============================
# INTÉGRATION OPENAI
# ===============================

# Clé API OpenAI (requise pour l'analyse vidéo et la transcription)
# Obtenir sur: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key

# Modèle à utiliser pour l'analyse (optionnel)
OPENAI_MODEL=gpt-4o

# ===============================
# CONFIGURATION AWS
# ===============================

# Région AWS (Stockholm)
AWS_REGION=eu-north-1

# Identifiants AWS pour accéder aux services
# IMPORTANT: Ne jamais partager ces valeurs!
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Configuration S3 pour le stockage des vidéos
AWS_S3_BUCKET_NAME=your-bucket-name

# Identifiant ARN de l'application 
# Utilisé pour tagging des ressources AWS
AWS_APPLICATION_ARN=arn:aws:resource-groups:eu-north-1:897722698206:group/VideoAds_Analyzer/08i6plqg6mgngt3xsqar3uqzoj

# ===============================
# API META (FACEBOOK & INSTAGRAM)
# ===============================

# Identifiants d'application Meta
# Obtenir sur: https://developers.facebook.com/
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_ACCESS_TOKEN=your_meta_access_token
META_BUSINESS_ACCOUNT_ID=your_business_account_id

# Configuration Instagram
# Requis pour l'extraction de vidéos Instagram
INSTAGRAM_USER_ID=your_instagram_user_id
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# Configuration Facebook
# Requis pour l'extraction de vidéos Facebook
FACEBOOK_PAGE_ID=your_facebook_page_id
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token 